    <script language="JavaScript" type="text/javascript">
        $(function(){
            /*
             $('.more-mdd-desc').click(function(){
             var self = $(this);
             self.closest('p').hide();
             $('.t-info-more').fadeIn();
             self.closest('.bd').css('height','auto');
